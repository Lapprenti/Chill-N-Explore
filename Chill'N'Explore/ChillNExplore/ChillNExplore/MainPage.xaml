<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChillNExplore"
             x:Class="ChillNExplore.MainPage">

    <StackLayout Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
        <Label FontSize="Large" XAlign="Center" Text="Avec Chill'N'Explore, découvrez ou re-découvrez la ville ou vous êtes ! Suivez le parcours, admirez des monuments et profitez des activités bonus !"/>
        <Entry Placeholder="Nom de la ville" x:Name="NomDeLaVille"/>
        <Button Text="Jouer" VerticalOptions="Center" Clicked="BtnPlay_Clicked"/>
    </StackLayout>

</ContentPage>
