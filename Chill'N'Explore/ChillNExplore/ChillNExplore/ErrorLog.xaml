<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChillNExplore.ErrorLog" BackgroundColor="#FF72E68C">
    <ContentPage.Content>
        <StackLayout>
            <Label  Text="Connectez-vous:"
                   FontSize="Medium"
            HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            <Label  Text="Déjà un compte" x:Name="AlrdAcc" FontSize="Micro"
             HorizontalOptions="Center" VerticalOptions="Center"  ></Label>
            <Label  Text="Créer un compte" x:Name="AddAcc"  FontSize="Micro"
            HorizontalOptions="Center" VerticalOptions="Center" ></Label>
            <Label Text="Conditions d'utilisation" x:Name="CondUtil"  FontSize="Micro"
            HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="25"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>